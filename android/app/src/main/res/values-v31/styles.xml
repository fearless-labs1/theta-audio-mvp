<?xml version="1.0" encoding="utf-8"?>
<!--
THETA ANDROID - SPLASH FIX (Android 12+)

INSTALL:
1. Copy splash_transparent.xml to android/app/src/main/res/drawable/
2. Copy THIS file to android/app/src/main/res/values-v31/styles.xml
3. flutter clean && flutter run

Result: Pure black splash, NO icon visible
-->
<resources>
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowSplashScreenBackground">#000000</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_transparent</item>
        <item name="android:windowSplashScreenIconBackgroundColor">#000000</item>
    </style>
    
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
